<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.robbcocco.gwenttracker.CardDetailFragment">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/card_detail_collapsingtoolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:expandedTitleGravity="top"
                app:expandedTitleMarginTop="210dp"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax">
                    <ImageView
                        android:id="@+id/card_detail_faction_art"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:alpha="0.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/faction_neutral"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-15dp"
                            android:layout_marginBottom="0dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/card_detail_art"
                                android:layout_width="0dp"
                                android:layout_height="250dp"
                                android:layout_weight="5"
                                android:scaleType="fitCenter"
                                tools:src="@drawable/placeholder_card_medium" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:paddingStart="2dp"
                                android:paddingEnd="0dp"
                                android:layout_marginTop="35dp"
                                android:layout_marginBottom="0dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="20dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">
                                <android.support.v7.widget.CardView
                                    android:id="@+id/card_detail_faction1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    app:cardBackgroundColor="@color/colorAccent"
                                    app:contentPaddingLeft="2dp"
                                    app:cardCornerRadius="0dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:background="@color/colorPrimary" >
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:gravity="start"
                                            android:textSize="@dimen/subtitle_size"
                                            android:fontFamily="sans-serif-smallcaps"
                                            android:textStyle="bold"
                                            android:text="@string/card_str"/>
                                        <TextView
                                            android:id="@+id/card_detail_set"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="12dp"
                                            android:paddingEnd="12dp"
                                            android:paddingBottom="8dp"
                                            android:gravity="start"
                                            android:singleLine="true"
                                            android:textSize="16sp"
                                            android:fontFamily="sans-serif-condensed"
                                            android:textStyle="bold"
                                            tools:text="6"/>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                                <android.support.v7.widget.CardView
                                    android:id="@+id/card_detail_faction2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    app:cardBackgroundColor="@color/colorAccent"
                                    app:contentPaddingLeft="2dp"
                                    app:cardCornerRadius="0dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:background="@color/colorPrimary" >
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:gravity="start"
                                            android:textSize="@dimen/subtitle_size"
                                            android:fontFamily="sans-serif-smallcaps"
                                            android:textStyle="bold"
                                            android:text="@string/card_faction"/>
                                        <TextView
                                            android:id="@+id/card_detail_faction"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="12dp"
                                            android:paddingEnd="12dp"
                                            android:paddingBottom="8dp"
                                            android:gravity="start"
                                            android:singleLine="true"
                                            android:textSize="16sp"
                                            android:fontFamily="sans-serif-condensed"
                                            android:textStyle="normal"
                                            tools:text="Northern Realms"/>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                                <android.support.v7.widget.CardView
                                    android:id="@+id/card_detail_faction3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    app:cardBackgroundColor="@color/colorAccent"
                                    app:contentPaddingLeft="2dp"
                                    app:cardCornerRadius="0dp">
                                    <LinearLayout
                                        android:id="@+id/card_detail_rarity_parent"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:background="@color/colorPrimary" >
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawableEnd="@drawable/ic_info_outline_24dp"
                                            android:padding="4dp"
                                            android:gravity="start"
                                            android:textSize="@dimen/subtitle_size"
                                            android:fontFamily="sans-serif-smallcaps"
                                            android:textStyle="bold"
                                            android:text="@string/card_rarity"/>
                                        <TextView
                                            android:id="@+id/card_detail_rarity"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="12dp"
                                            android:paddingEnd="12dp"
                                            android:paddingBottom="8dp"
                                            android:gravity="start"
                                            android:singleLine="true"
                                            android:textSize="16sp"
                                            android:fontFamily="sans-serif-condensed"
                                            android:textStyle="normal"
                                            tools:text="Legendary"/>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/card_detail_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="35dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="-25dp"
                            android:layout_marginBottom="-15dp"
                            android:singleLine="true"
                            android:textColor="#FFF"
                            android:textSize="40sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            tools:text="Dudu"/>
                        <TextView
                            android:id="@+id/card_detail_flavor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="italic"
                            tools:text="Flavor" />
                    </LinearLayout>
                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/card_detail_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    android:layout_alignParentTop="true"
                    android:elevation="6dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:nestedScrollingEnabled="true">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_detail_faction4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:contentPaddingLeft="2dp"
                    app:cardCornerRadius="0dp">
                    <LinearLayout
                        android:id="@+id/card_detail_info_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorPrimary"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_info_outline_24dp"
                            android:padding="8dp"
                            android:gravity="start"
                            android:textSize="@dimen/subtitle_size"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textStyle="bold"
                            android:text="@string/card_info"/>
                        <TextView
                            android:id="@+id/card_detail_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="8dp"
                            android:gravity="start"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="normal"
                            tools:text="Do something"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_detail_faction5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:contentPaddingLeft="2dp"
                    app:cardCornerRadius="0dp">
                    <LinearLayout
                        android:id="@+id/card_detail_categories_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorPrimary"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="start"
                            android:textSize="@dimen/subtitle_size"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textStyle="bold"
                            android:text="@string/card_categories"/>
                        <TextView
                            android:id="@+id/card_detail_categories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="8dp"
                            android:gravity="start"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="normal"
                            tools:text="Witcher, Relic, Spell, Special"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_detail_faction6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:contentPaddingLeft="2dp"
                    app:cardCornerRadius="0dp">
                    <LinearLayout
                        android:id="@+id/card_detail_related_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorPrimary"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="start"
                            android:textSize="@dimen/subtitle_size"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textStyle="bold"
                            android:text="@string/card_related"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/card_detail_related_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>