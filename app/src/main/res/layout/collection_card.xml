<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collection_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="12dp"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:gravity="center">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="-10dp">
            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="0dp">
                <io.supercharge.shimmerlayout.ShimmerLayout
                    android:id="@+id/collection_card_art_shimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:shimmer_animation_duration="800"
                    app:shimmer_color="@color/cardShimmer"
                    app:shimmer_mask_width="1"
                    app:shimmer_gradient_center_color_width="0.2">
                    <android.support.v7.widget.CardView
                        android:layout_width="76dp"
                        android:layout_height="106dp"
                        app:cardBackgroundColor="@color/cardShimmerBG"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="0dp"/>
                </io.supercharge.shimmerlayout.ShimmerLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:id="@+id/collection_card_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                tools:src="@drawable/placeholder_card_low"/>
        </android.support.design.widget.CoordinatorLayout>
        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="0dp">
            <android.support.design.widget.CoordinatorLayout
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_marginStart="2dp"
                android:background="@color/colorPrimary"
                android:gravity="center">
                <TextView
                    android:id="@+id/collection_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="normal"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    tools:text="Dudu"/>
                <io.supercharge.shimmerlayout.ShimmerLayout
                    android:id="@+id/collection_card_name_shimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:shimmer_animation_duration="800"
                    app:shimmer_color="@color/cardShimmer"
                    app:shimmer_mask_width="1"
                    app:shimmer_gradient_center_color_width="0.2">
                    <android.support.v7.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="14dp"
                        app:cardBackgroundColor="@color/cardShimmerBG"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="7dp"/>
                </io.supercharge.shimmerlayout.ShimmerLayout>
            </android.support.design.widget.CoordinatorLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>