<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collection_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="-8dp"
    android:layout_marginBottom="8dp"
    android:paddingStart="-5dp"
    android:paddingEnd="5dp"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/collection_card_art"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:minWidth="120dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-12dp"
        tools:src="@drawable/placeholder_card_low"/>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_marginStart="10dp"
        android:paddingStart="2dp"
        android:paddingEnd="0dp">
        <TextView
            android:id="@+id/collection_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="4dp"
            android:gravity="start"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            tools:text="Dudu"/>
        <TextView
            android:id="@+id/collection_card_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:gravity="start"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            tools:text="Witcher, Relic, Spell, Special"/>
    </LinearLayout>

</LinearLayout>